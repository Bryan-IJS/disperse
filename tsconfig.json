{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "experimentalDecorators": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
          "@ijstech/components": ["node_modules/@ijstech/components"],
          "@scom/disperse-sdk": ["packages/disperse-sdk/types"],
          "@disperse/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts"
    ]
  }